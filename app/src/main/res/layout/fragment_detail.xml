<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.detailFragment.DetailFragment"
    tools:background="@color/backgroundColor"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/customToolbar"
            android:layout_width="0dp"
            android:layout_height="?actionBarSize"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageButton
                android:id="@+id/backArrow"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_marginHorizontal="8dp"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="@string/image_text_content_description"
                style="@style/Widget.MaterialComponents.Button.TextButton"/>
            <TextView
                android:id="@+id/textTitle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginEnd="16dp"
                android:textSize="22sp"
                android:textAlignment="center"
                tools:text="4-Starred Ladybug of Doom"/>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/imageContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:layout_constraintTop_toBottomOf="@id/customToolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/aditional"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp">
            <ImageView
                android:id="@+id/imageCardDetail"
                android:layout_width="220dp"
                android:layout_height="220dp"
                tools:srcCompat="@tools:sample/avatars"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/aditional"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="@id/imageContainer"
            app:layout_constraintStart_toEndOf="@id/imageContainer"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/primaryColor"
                app:cardCornerRadius="22dp"
                app:cardElevation="7dp"
                android:layout_weight="2"
                android:layout_marginVertical="16dp"
                android:layout_marginStart="8dp">
                <TextView
                    android:id="@+id/textLevel"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    tools:text="Level: 5"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/primaryColor"
                app:cardCornerRadius="22dp"
                app:cardElevation="7dp"
                android:layout_weight="2"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="8dp">
                <TextView
                    android:id="@+id/textAtack"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    tools:text="Atack: 1250"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/primaryColor"
                app:cardCornerRadius="22dp"
                app:cardElevation="7dp"
                android:layout_weight="2"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="8dp">
                <TextView
                    android:id="@+id/textDef"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    tools:text="Defend: 2150"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <TextView
            android:id="@+id/textAtribute"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Atributte: WATER"
            app:layout_constraintTop_toBottomOf="@id/imageContainer"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:textColor="@color/white"
            android:textSize="21sp"/>

        <TextView
            android:id="@+id/textDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="When there are 3 face-up 7 cards on your side of the field, draw 3 cards from your Deck. Then destroy all 7 cards. When this card is sent directly from the field to your Graveyard, increase your Life Points by 700 points."
            app:layout_constraintTop_toBottomOf="@id/textAtribute"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:textColor="@color/white"
            android:textSize="20sp"/>

        <LinearLayout
            android:id="@+id/cardContainer1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/textDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingHorizontal="8dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/primaryColor"
                app:cardCornerRadius="22dp"
                app:cardElevation="7dp"
                android:layout_weight="1"
                android:layout_marginVertical="12dp"
                android:layout_marginEnd="4dp">

                <TextView
                    android:id="@+id/textType"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    tools:text="Type:\nSmell Cards"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/primaryColor"
                app:cardCornerRadius="22dp"
                app:cardElevation="7dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginVertical="12dp">

                <TextView
                    android:id="@+id/textFrameType"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    tools:text="Frame Type: \nSmell"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/cardContainer1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingHorizontal="8dp"
            android:gravity="center_vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/primaryColor"
                app:cardCornerRadius="22dp"
                app:cardElevation="7dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:layout_marginVertical="12dp">

                <TextView
                    android:id="@+id/textRace"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    tools:text="Race:\nConitnuos"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/primaryColor"
                app:cardCornerRadius="22dp"
                app:cardElevation="7dp"
                android:layout_weight="1"
                android:layout_marginVertical="12dp"
                android:layout_marginStart="4dp">

                <LinearLayout
                    android:id="@+id/btnMoreInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">
                    <TextView
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_more_info"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="8dp"/>
                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_open"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>